@model IEnumerable<DersKayit.Models.Ders>
@{
    ViewBag.Title = "Ders Seçim Sayfası";
}
<div class="page-header">
<h2>Ders Seçim Sayfasına Hoşgeldiniz!</h2>
</div>
<div class="row container">
    <div class="panel panel-heading col-md-2">
        @Html.DisplayNameFor(model => model.DersAdi)
    </div>
    <div class="panel panel-heading col-md-2">
        @Html.DisplayNameFor(model => model.DersKodu)
    </div>
    <div class="panel panel-heading col-md-1">
        @Html.DisplayNameFor(model => model.Kontenjan)
    </div>
    <div class="panel panel-heading col-md-1">
        @Html.DisplayNameFor(model => model.OnSartVarMi)
    </div>
    <div class="panel panel-heading col-md-2">
        @Html.DisplayNameFor(model => model.Bolum.BolumAdi)
    </div>
    <div class="panel panel-heading col-md-3">
        @Html.DisplayNameFor(model => model.Hoca.HocaTamAd)
    </div>
    <div class="panel panel-heading col-md-1">
        İşlemler
    </div>
    
    @foreach (var item in Model)
    {
        <div class="row">
        <div class="panel panel-body col-md-2">
            <a href="@Url.Action("DersDetay","Ders", new {dersId = item.DersId},null)">
                @Html.DisplayFor(modelitem => item.DersAdi)
            </a>
            
        </div>
        <div class="panel panel-body col-md-2">
            @Html.DisplayFor(modelitem => item.DersKodu)
        </div>
        <div class="panel panel-body col-md-1">
            @Html.DisplayFor(modelitem => item.Kontenjan)
        </div>
        <div class="panel panel-body col-md-1">
            @Html.DisplayFor(modelitem => item.OnSartVarMi)
        </div>
        <div class="panel panel-body col-md-2">
            @Html.DisplayFor(modelitem => item.Bolum.BolumAdi)
        </div>
        <div class="panel panel-body col-md-3">
            @Html.DisplayFor(modelitem => item.Hoca.HocaTamAd)
        </div>
        <div class="panel panel-body col-md-1">
            @Html.ActionLink("Ekle","DersEkle","Ders", new { ogrenciId = 4, dersId = item.DersId}, null)
        </div>
        </div>
     }

</div>


