@model DersKayit.Models.Ogrenci

<h2>Öğrenci Kayıt Durumu</h2>
<p class="alert alert-info" role="alert"> @TempData["Message"] </p>

<div class="container">
    <h5>Öğrenci Bilgileri</h5>
    <ul>
        <li> <strong>İsim:</strong> @Model.OgrenciTamAd</li>
        <li> <strong>Öğrenci Numarası:</strong> @Model.OgrenciNo</li>
        <li> <strong>Bu öğrenci için toplam @Model.Dersler.Count adet ders eklenmiştir</strong></li>
    </ul>
    <hr/> <h5>Öğrenciye Ait Ekli Dersler</h5>
    <ol>
        @foreach (var item in Model.Dersler)
        {
            <li>
                <a href="@Url.Action("DersDetay","Ders", new {dersId = item.DersId},null)">
                    @item.DersAdi
                    </a>
            </li>
        }
    </ol>
    <hr/>
    <p>@Html.ActionLink("Ders Ekleme Ekranına Geri Dön","Index","Ders")</p>

</div>

