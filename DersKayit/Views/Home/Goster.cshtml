@model DersKayit.Models.Ogrenci

@{
    ViewBag.Title = "Goster";
}

<legend class="alert alert-success">Başarıyla giriş yaptınız!</legend>


<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Öğrenci Bilgileri</h3>
    </div>
    <div class="panel-body">
        <p class="list-group">
            <label class="list-group-item"> <strong>İsim:</strong> @Model.OgrenciTamAd</label>
            <label class="list-group-item"> <strong>Öğrenci No:</strong> @Model.OgrenciNo</label>
            <label class="list-group-item"> <strong>Bölüm:</strong> @Model.Bolum.BolumAdi</label>
        </p>
    </div>
</div>

<div class="panel">
   <label class="lead">@Html.ActionLink("Ders Seç", "Index", "Ders")</label>
</div>
